@model Tarefas.Models.Tarefa

@{
    ViewData["Title"] = "Editar Tarefa";
}


<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background: #231b2e;">
    <div style="width: 100%; max-width: 500px; background: #2d223a; color: #fff; border-radius: 20px; box-shadow: 0 0 24px #0002; padding: 32px 24px;">
        <h3 class="text-center mb-4" style="font-weight: 600;">Editar Tarefa</h3>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            @{
                ViewData["TituloModal"] = "Editar Tarefa";
            }
            <partial name="_Create" model="Model" />
            <div class="d-flex justify-content-end mt-3 gap-2">
                <a asp-action="Index" class="btnasasa  btn-secondary" style="border-radius: 10px;">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
