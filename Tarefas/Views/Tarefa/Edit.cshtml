@model Tarefas.Models.Tarefa

@{
    ViewData["Title"] = "Editar Tarefa";
}

<h2>Editar Tarefa</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <input asp-for="Descricao" class="form-control" placeholder="Descrição" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input asp-for="CriadaEm" class="form-control" type="date" placeholder="Criada em" />
                <span asp-validation-for="CriadaEm" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input asp-for="ConcluidaEm" class="form-control" type="date" placeholder="Concluída em" />
                <span asp-validation-for="ConcluidaEm" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Concluida" class="control-label"></label>
                <input asp-for="Concluida" class="form-check-input" type="checkbox" />
                <span asp-validation-for="Concluida" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
