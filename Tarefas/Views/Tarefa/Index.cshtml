@model IEnumerable<Tarefas.Models.Tarefa>

@{
    ViewData["Title"] = "Minhas Tarefas";
}

<header>
    
</header>

<main>
    <div class="container mt-4">
        <h2 class="mb-4">Minhas Tarefas</h2>
        <a asp-action="Create" class="btn btn-primary mb-3">Adicionar Nova Tarefa</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Favorita</th>
                    <th>Descrição</th>
                    <th>Categoria</th>
                    <th>Concluída</th>
                    <th>Criada Em</th>
                    <th>Concluída Em</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @if (item.Favorita)
                        {
                            <i class="bi bi-star-fill" style="color: black;"></i>
                        }
                    </td>
                    <td>
                        <form asp-action="ToggleConcluida" asp-route-id="@item.Id" method="post" style="display:inline;">
                            <input type="checkbox" onchange="this.form.submit()" @(item.Concluida ? "checked" : "") />
                            <span style="@(item.Concluida ? "text-decoration: line-through; color: #888;" : "")">@item.Descricao</span>
                        </form>
                    </td>
                    <td>
                        @if (string.IsNullOrEmpty(item.Categoria))
                        {
                            <span class="text-muted">Nenhuma categoria</span>
                        }
                        else
                        {
                            @item.Categoria
                        }
                    </td>
                    <td>
                        @Html.Raw(item.Concluida 
                            ? "<span style='color: #198754; font-weight: bold;'>Sim</span>" 
                            : "<span style='color: #fd7e14; font-weight: bold;'>Em andamento</span>")
                    </td>
                    <td>@item.CriadaEm.ToShortDateString()</td>
                    <td>@(item.ConcluidaEm.HasValue ? item.ConcluidaEm.Value.ToShortDateString() : "-")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link p-0 m-0 align-baseline" title="Editar">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#ffc107" class="bi bi-pencil" viewBox="0 0 16 16">
                              <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"/>
                            </svg>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-link p-0 m-0 align-baseline" title="Excluir">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#dc3545" class="bi bi-trash" viewBox="0 0 16 16">
                              <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                              <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                            </svg>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</main>

<footer>
</footer>
