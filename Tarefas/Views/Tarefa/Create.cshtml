@model Tarefas.Models.Tarefa

@{
    ViewData["Title"] = "Criar Tarefa";
}

<h2>Criar Nova Tarefa</h2>

<form asp-action="Create">
    <div class="form-group mb-3">
        <input asp-for="Descricao" class="form-control form-control-lg" placeholder="Descrição da tarefa..." style="border-radius:24px; padding-left:20px; box-shadow:0 1px 6px rgba(32,33,36,.28); border:1px solid #dfe1e5; font-size:1.1rem;" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group mb-3 d-flex align-items-center">
        <input asp-for="Concluida" class="form-check-input me-2" type="checkbox" id="concluidaCheck" />
        <label for="concluidaCheck" class="mb-0" style="font-weight:400;">Tarefa já está concluída?</label>
        <span asp-validation-for="Concluida" class="text-danger ms-2"></span>
    </div>
    <div class="form-group mb-3">
        <input asp-for="CriadaEm" class="form-control form-control-lg" type="date" placeholder="Data de criação" style="border-radius:24px; padding-left:20px; box-shadow:0 1px 6px rgba(32,33,36,.28); border:1px solid #dfe1e5; font-size:1.1rem;" />
        <span asp-validation-for="CriadaEm" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <input asp-for="ConcluidaEm" class="form-control form-control-lg" type="date" placeholder="Data de conclusão (opcional)" style="border-radius:24px; padding-left:20px; box-shadow:0 1px 6px rgba(32,33,36,.28); border:1px solid #dfe1e5; font-size:1.1rem;" />
        <span asp-validation-for="ConcluidaEm" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Criar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
